{
  "name": "realworld-build-from-prd",
  "version": "1.0.0",
  "description": "> ### 라이브 코딩 학습을 통한 RealWorld 애플리케이션 구현 프로젝트",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "prepare": "husky install",
    "build:frontend": "cd frontend && npm run build",
    "build:backend": "cd backend && ./gradlew build",
    "build:all": "npm run build:frontend && npm run build:backend",
    "test:frontend": "cd frontend && npm test",
    "test:backend": "cd backend && ./gradlew test",
    "test:all": "npm run test:frontend && npm run test:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend && ./gradlew check",
    "lint:all": "npm run lint:frontend && npm run lint:backend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:backend": "cd backend && ./gradlew bootRun"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/FNO012/Realworld-build-from-prd.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/FNO012/Realworld-build-from-prd/issues"
  },
  "homepage": "https://github.com/FNO012/Realworld-build-from-prd#readme",
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.1.5"
  },
  "lint-staged": {
    "frontend/**/*.{js,jsx,ts,tsx}": [
      "cd frontend && npm run lint",
      "cd frontend && npx prettier --write"
    ],
    "frontend/**/*.{json,css,md}": [
      "cd frontend && npx prettier --write"
    ],
    "backend/**/*.java": [
      "cd backend && ./gradlew checkstyleMain || true"
    ]
  }
}
